<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_follows"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/follows_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/viewCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@color/transparency_375"
            android:drawableLeft="@mipmap/conut"
            android:paddingLeft="5dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text=" 0"
            android:textColor="@color/white"
            android:textSize="8sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/follows_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/fl"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/follows_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:textSize="11sp"
        android:layout_toEndOf="@+id/fl" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:scaleType="matrix"
        android:layout_toStartOf="@+id/follows_comments"
        android:src="@mipmap/messageicon" />

    <TextView
        android:id="@+id/follows_comments"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:text="0"
        android:textSize="11sp" />

</RelativeLayout>
