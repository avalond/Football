<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/teamPlayer"
    android:background="@color/white">
    
    <cn.brision.football.view.roundedimageview.RoundedImageView
        android:id="@+id/teamPlayer_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:src="@mipmap/player"
        android:scaleType="fitXY"
        app:riv_oval="true"/>

    <TextView
        android:id="@+id/teamPlayer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/teamPlayer_photo"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/teamPlayer_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_toEndOf="@+id/teamPlayer_photo"
        android:layout_alignBottom="@+id/teamPlayer_photo"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="4dp"/>
</RelativeLayout>