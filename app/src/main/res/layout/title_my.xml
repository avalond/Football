<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@mipmap/bg_title_my">

        <RelativeLayout
            android:id="@+id/user_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
        <cn.brision.football.view.roundedimageview.RoundedImageView
            android:id="@+id/user_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/player_shape"
            android:scaleType="fitXY"
            android:src="@mipmap/user"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/uers_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="asdasdasd"
            android:textColor="@color/white"
            android:textSize="16sp" />
        </RelativeLayout>
</RelativeLayout>
