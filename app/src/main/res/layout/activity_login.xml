<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg">

    <ImageView
        android:id="@+id/login_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@mipmap/login_back"
        android:scaleType="centerInside"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:src="@mipmap/login_football" />

    <EditText
        android:id="@+id/user_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@null"
        android:inputType="number"
        android:maxLength="11"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:textCursorDrawable="@drawable/editext_cursor_color"
        android:gravity="bottom"
        android:layout_alignEnd="@+id/line"
        android:textColor="@color/white"
        android:layout_alignStart="@+id/line"
        android:layout_above="@+id/line"
        android:layout_marginBottom="3dp"/>

    <EditText
        android:id="@+id/auth_code"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@null"
        android:inputType="number"
        android:maxLength="6"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:textCursorDrawable="@drawable/editext_cursor_color"
        android:gravity="bottom"
        android:layout_toStartOf="@+id/get_auth_code"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:layout_alignStart="@+id/line2"
        android:layout_above="@+id/line2"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:id="@+id/get_auth_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:clickable="true"
        android:text="@string/getcode"
        android:layout_alignEnd="@+id/line2"
        android:layout_above="@+id/line2"
        android:layout_marginBottom="3dp"
        android:paddingRight="10dp"/>

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_user"
        android:layout_alignBottom="@+id/line"
        android:layout_alignStart="@+id/login"/>

    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_toEndOf="@+id/iv2"
        android:layout_above="@+id/line2"
        android:layout_marginBottom="71dp"
        android:layout_alignEnd="@+id/login"
        android:layout_marginStart="7dp"/>

    <View
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_toEndOf="@+id/iv"
        android:layout_alignBottom="@+id/iv"
        android:layout_alignEnd="@+id/login"
        android:layout_marginStart="7dp"/>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_mima"
        android:scaleType="centerInside"
        android:layout_alignStart="@+id/login"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/login"/>

    <Button
        android:id="@+id/login"
        android:layout_width="286dp"
        android:layout_height="40dp"
        android:background="@drawable/login_shape"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="260dp"
        android:text="@string/login"
        android:textSize="17sp" />

</RelativeLayout>
