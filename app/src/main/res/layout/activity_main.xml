<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:background="@color/gray_192" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:background="@color/colorbackground_tab">


        <RelativeLayout
            android:id="@+id/tab_moments_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:clickable="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/tab_moments_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@mipmap/moments_on"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tab_moments_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tab_moments_image"
                android:layout_marginTop="4dp"
                android:text="@string/circle"
                android:textColor="@color/yellow_01" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_lives_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:clickable="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/tab_lives_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@mipmap/lives_off"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tab_lives_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tab_lives_image"
                android:layout_marginTop="4dp"
                android:text="@string/directseeding"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_middle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:clickable="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/tab_middle_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@mipmap/middle_off"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tab_middle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tab_middle_image"
                android:layout_marginTop="4dp"
                android:text="@string/middle" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/tab_data_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:clickable="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/tab_data_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@mipmap/data_off"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tab_data_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tab_data_image"
                android:layout_marginTop="4dp"
                android:text="@string/data" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_my_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:clickable="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/tab_my_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@mipmap/my_off"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tab_my_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tab_my_image"
                android:layout_marginTop="4dp"
                android:text="@string/my"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
